/* pages/mine/video-detail/video-detail.wxss */
@import "/components/enter-loading/enter-loading.wxss";

page {
  background: #F6F6F7;
  position: relative;
}
.video_top{
  background-color: #fff;
}
.video_top .classVideo {
  width: 100%;
  height: 420rpx;
  position: relative;
}
.video_top .banner_box {
  width: 100%;
  height: 420rpx;
  position: relative;
  overflow: hidden;
}
.video_top .banner_box .mask {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background: rgba(0, 0, 0, 0.5);
}
.video_top .banner_box .tip {
 position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 99;
  color: #fff;
  font-size: 28rpx;
} 
.banner_box .banner {
  width: 100%;
  height: 100%;
  filter: blur(20rpx);
}
.video_top .classVideo .video_img {
  position: absolute;
  width: 100rpx;
  height: 100rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 9999;
}
.video_top .top_content {
 padding: 20rpx 30rpx 40rpx 30rpx;
}
.video_top .top_content .describe {
  font-size: 30rpx;
  color: #333;
  line-height: 40rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.video_top .top_content .describe .toggle_describe {
  color: #22D778;
}  
.video_top .top_content .describe image {
  width: 24rpx;
  height: 14rpx;
  margin-left: 10rpx;
}
.video_top .top_content .video_time {
  font-size: 24rpx;
  color: #999;
  margin-top: 20rpx;
  line-height: 24rpx;
}
.video_content {
  overflow: auto;
  margin-top: 20rpx;
  box-sizing: border-box;
  position: relative;
  padding-top: 120rpx;
}
.video_content .title {
  height: 116rpx;
  font-size: 36rpx;
  color: #333;
  padding: 0 30rpx;
  line-height: 116rpx;
  position: fixed;
  width: 100%;
  background-color: #fff;
  z-index: 99;
  font-weight: 500;
}
.video_content .section {
  color: #333;
  font-size: 28rpx;
}
.bottom {
  margin: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: fixed;
  bottom: 0;
  transform: translate(-50%,-50%);
  left: 50%;
}
.bottom .company {
  display: flex;
  justify-content: center;
  margin-bottom: 8rpx;
}
.bottom .companyLogo {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}
.bottom .companyText {
  font-size: 24rpx;
  color: #999;
}
.bottom .website {
  font-size: 20rpx;
  color: #999;
}
/* 目录部分 */
.video_content .section  {
  color: #333;
  font-size: 28rpx;
}
.video_content .section .section_item {
  background-color: #F6F6F7;
  display: flex;
  padding: 34rpx 0;
  position: relative;
}
.section .section_item .section_title {
  font-weight: 500;
}
.video_content .section .border {
  border-bottom: 1px solid #EBEBEB;
}
.video_content .section .line {
  width: 10rpx;
  height: 40rpx;
  background:#19B329;
  margin-right: 40rpx;
}
.section .section_img {
  width: 24rpx;
  height: 14rpx;
  position: absolute;
  right: 40rpx;
  top: 50%;
  transform: translateY(-50%);  
}
.video_content .section .className {
  background-color: #fff;
}
.className .item_wrap {
  position: relative;
  padding-left: 70rpx;
}
.className .class_name_item {
  padding: 34rpx 40rpx 34rpx 0;
  font-size: 28rpx;
  color:#333;
  display: flex;
  justify-content: space-between;
  border-bottom: 2rpx solid #F3F3F3;
}
.className .class_name_item .class_name_activity {
  color: #19B329;
}
.className .class_name_item .class_name {
  display: flex;
  align-items: center;
}
.className .class_name_item .index {
  width: 50rpx;
  font-size: 28rpx;
}
.className .class_name_item .class_name_line {
  margin-right: 20rpx;
}
.className .class_name_item .videoName {
  width: 476rpx;
  font-size: 28rpx;
}
.className .item_wrap .item_line {
  position: absolute;
  height: 1px;
  width: 680rpx;
  bottom: 0;
  right: 0;
  background-color: #F3F3F3;  
}
.className .class_name_item image {
  width: 40rpx;
  height: 40rpx;
}
.section .noClass {
  color: #ccc;
  padding: 28rpx 0 38rpx 70rpx;
  background-color: #fff;
}
  
  
  
  
  
  
  
  