.popup-wrap{
  padding: 30rpx;
}
.dialog-wrap{
  position: relative;
  width:684rpx;
  height:604rpx;
}
.dialog-bg{
  position: absolute;
  z-index: -1;
  width:684rpx;
  height:604rpx;
}
.dialog-wrap .coupon-item{
  position: absolute;
  top:110rpx;
  width:100%;
  height:300rpx;
  z-index: 2;
  padding:100rpx;
}
.dialog-wrap .coupon-info{
  margin-bottom:30rpx;
}
.dialog-btn{
  position: absolute;
  bottom:80rpx;
  width:100%;
}
.dialog-btn .btn{
  width:300rpx;
  height:70rpx;
  line-height: 70rpx;
}

