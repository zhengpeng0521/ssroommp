/* pages/mine/record/record.wxss */
.record{
  margin-top:20rpx;
  background:#fff;
}
.list-item{
  padding:30rpx;
  color:#333;
  border-bottom: 2rpx solid #eee;
}
.item-info{
  display: flex;
}
.item-name{
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size:28rpx;
  line-height: 52rpx;
}
.item-frag{
  color:#F56C6C;
  font-weight: 600;
  font-size:40rpx;
}
.reduce{
  color:#67C23A;
}
.item-type{
  margin:14rpx 0 20rpx;
  font-size:24rpx;
}
.item-time{
  color:#999;
  font-size:24rpx;
}
.list-none{
  display: flex;
  padding:30rpx 0;
  font-size:24rpx;
  color:#ccc;
  align-items: center;
  justify-content: center;
}