.my-card-package {
  padding: 40rpx 30rpx;
}
.my-card-package .title{
  font-size: 28rpx;
  color: #000;
  margin-bottom: 30rpx;
}
.my-card-package .title text {
  font-size: 28rpx;
  color: #999;
}
.card-item {
  height: 296rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx 0px rgba(80, 47, 14, 0.2);
  position: relative;
  z-index: 999;
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-top: -189rpx;
}
.card-item:first-child {
  margin-top: 0;
}
.card-bg {
  position: absolute;
  top: 0;
  left: 0;
  z-index: -1;
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}
