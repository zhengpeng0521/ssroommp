.head {
  background-color: #fff;
  position: fixed;
  width: 100%;
  top: 0;
  left:0;
  z-index: 10;
}

.head .head-item {
  height: 100%;
  align-items: center;
  justify-content: center;
  position: relative;
  display: flex;
  cursor: pointer;
  /* margin-left: 40rpx; */
}
.head .head-item:last-child .item-content {
  margin: 0 40rpx;
}
.head .head-item:nth-last-child(2) .item-content {
  margin: 0 0 0 20rpx;
}
.head .head-item .item-content {
  font-size: 28rpx;
  color: #666;
  text-align: center;
  vertical-align: middle;
  position: relative;
  font-weight: 400;
  line-height:40rpx;
  margin: 0 20rpx;
}
.head .head-item .tab-active-class {
  color: #333;
  font-weight:600;
}
.head .head-item .head-green-line {
  width: 60rpx;
  height: 8rpx;
  background: #19B329;
  position: absolute;
  left: 50%;
  bottom: 10rpx;
  transform: translate(-50%, 0);
  /* margin-left: -30rpx; */
  border-radius:4rpx;
}

.head .head-item .item-content .head-badge {
  min-width: 32rpx;
  height: calc(width);
  border-radius: 50%;
  padding: 1px;
  background: #ff7058;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
  line-height: 32rpx;
  position: absolute;
  top: -16rpx;
  right: -16rpx;
}
.order-type{
  background-color: #fff;
  white-space: nowrap;
  box-sizing: border-box;
  height: 92rpx;
  display: flex;
  padding-left: 20rpx;
  /* padding: 0 58rpx 0 62rpx; */
}
.top{
  padding:30rpx 30rpx 20rpx;
}
.tab-wrap{
  height:90rpx;
  border-radius: 30rpx;
  border:2rpx solid #eee;
  color:#000;
  font-size:32rpx;
  display: flex;
  overflow: hidden;
}
.tab-item:first-of-type{
  border-right: 2rpx solid #eee;
}
.tab-item{
  flex:1;
  display: flex;
  align-items: center;
  justify-content: center;
  background:#F7F7F7;
  color:#666;
}
.tab-active{
  background:#fff;
  color:#333;
}
/* end */
.drp-header{
  position: fixed;
  background:#fff;
  width: 100%;
  box-sizing: border-box;
  top:0;
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding:20rpx 30rpx;
  border-top:1rpx solid #eee;
  box-shadow: 0 5rpx 15rpx rgba(0,0,0,0.1);
}
.search-container {
  box-sizing: border-box;
  width: 568rpx;
}
.search-container .search {
  background-color: #f7f7f7;
  border-radius: 37rpx;
  border: 2rpx solid #eee;
  box-sizing: border-box;
  height: 72rpx;
  padding-left: 94rpx;
  position: relative;
}

.search-container .search .iconfont {
  position: absolute;
  top: 50%;
  left: 40rpx;
  transform: translate(0, -50%);
  font-size: 45rpx;
}
.iconsousuo{
  color:#ccc;
}
.search-placeholder{
  color:#aaa;
  font-size:28rpx;
}
.search-container input {
  width: 100%;
  height: 100%;
}

.city-name{
  display: block;
  font-size: 26rpx;
  color: #333;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  max-width: 110rpx;
  height:34rpx;
}
.city-name::before {
  float: right;
  font-size: 16rpx;
  position: relative;
  top: 12rpx;
  color: #ccc;
  margin-left: 8rpx;
}
.banner-swiper{
  height:422rpx;
}
.play-card-detail{
  width:100%;
  height:422rpx;
}
.product-wrap{
  padding:20rpx 30rpx;
}
.title{
  font-weight: 600;
  font-size: 36rpx;
  margin-bottom:40rpx;
}
.product-list{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.item{
  margin-bottom: 20rpx;
  width: 100%;
  background: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
}
.navigator-hover{
  transform: scale(0.99);
  transition: all 0.1s;
  /* background: none; */
}
.product-img{
  width:274rpx;
  height:154rpx;
  border-radius: 8rpx;
  display: block;
}
.product-img image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}
.product-right-all {
  width: 360rpx;
  height: 100%;
  margin-left: 16rpx;
}
.product-name{
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  line-height: 40rpx;
  height: 80rpx;
  margin: 8rpx 0 14rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.product-right-foot {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.price{
  font-weight: 500;
  line-height: 1;
  display: flex;
  align-items: center;
}
.discount-price{
  color:#F56C6C;
  font-size:22rpx;
  font-weight: 500;
}
.discount-price text {
  color:#F56C6C;
  font-size:32rpx;
  font-weight: 500;
  line-height: 44rpx;
}
.origin-price{
  font-size:22rpx;
  color:#BBBBBB;
  text-decoration: line-through;
  line-height:32rpx;
  padding-top: 10rpx;
  margin-left:20rpx;
}
.benefit-amount{
  line-height: 28rpx;
  color: #F56C6C;
  border-radius: 4rpx;
  font-size: 20rpx;
  font-weight: 500;
  letter-spacing: -1rpx;
  padding: 0 6rpx;
  margin-left: 10rpx;  
  border:2rpx solid rgba(245,108,108,1);
  margin-top: 5rpx;
}
.play-btn {
  background: #00B600;
  color: #fff;
  width: 120rpx;
  /* height: 48rpx; */
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  font-size: 24rpx;
  justify-content: center;
}
.play-btn .play-text {
  line-height: 28rpx;
  padding: 10rpx 0;
}
.play-btn .play-triangle {
  width:0;
  height:0;
  border-top:11rpx solid transparent;
  border-bottom:11rpx solid transparent;
  border-left:17rpx solid #fff;
  margin-right: 12rpx;
}
.no-goods-content{
  padding-top:100rpx;
  text-align: center;
}
.no-goods-content image{
  width:246rpx;
  height:246rpx;
}
.location{
  font-size:24rpx;
  color:#666;
  font-weight: 500;
  margin:20rpx 0;
  width:100%;
  height:34rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}