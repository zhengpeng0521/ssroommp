.recommendation-container {
  padding: 0 24rpx;
}

/* 广告位 */
.adv-wrap{
  padding:0 30rpx;
  margin-bottom:60rpx;
}
.adv-wrap swiper{
  height:190rpx;
}
.slide-image{
  width:690rpx;
  height:190rpx;
  border-radius: 16rpx;
}

.dialog-wrap{
  padding:60rpx 40rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  flex-direction: column;
  min-width: 560rpx;
  box-sizing: border-box;
}
.dialog-title{
  color:#333;
  font-size:32rpx;
  line-height:44rpx;
  font-weight: 500;
  margin-top:30rpx;
}
.dialog-content{
  color:#666;
  font-size:28rpx;
  line-height: 40rpx;
  width:280rpx;
  text-align: center;
  margin-top:20rpx;
}

/**
悬浮按钮
**/
.fab-wrap{
  position: fixed;
  z-index: 1001;
  right:40rpx;
  bottom:240rpx;
  width:80rpx;
  height:80rpx;
  transform: translate3d(0,0,0);
  transition: all .2s;
}
.fab-entry{
  bottom: 120rpx;
}
.fab-float{
  transform: translate3d(90rpx,0,0);
  opacity: .5;
}
.fab-button{
  width:80rpx;
  height:80rpx;
  border-radius: 100%;
  padding:0;
  box-shadow: 0 4rpx 8rpx 0 rgba(0,0,0,0.3);
}
.fab-button .fab-icon{
  width:80rpx;
  height:80rpx;
}
.notice{
  position: absolute;
  top:454rpx;
  z-index: 3;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background:rgba(0,0,0,.82);
  padding: 0 16rpx;
  height:92rpx;
  margin:0 66rpx;
  color:rgba(255,255,255,.82);
  font-size:24rpx;
  transition: all .2s;
}
.hide-notice{
  opacity: 0;
}
.notice-msg{
  padding:0 8rpx;
}
.notice-icon{
  background:#fff;
  padding:0 10rpx;
}
.icon-popup{
  font-size:46rpx;
}
.icon-arrow{
  font-size:32rpx;
}
.icon-location{
  color:#FF9436;
  font-size:30rpx;
  margin-right:10rpx;
}
/* 空提示 */
.no-goods-content {
  text-align: center;
  margin-top: 120rpx;
}

.no-goods-content image {
  width: 244rpx;
  height: 244rpx;
  margin-bottom: 42rpx;
}

.no-goods-txt {
  width: 100%;
  color: #999;
  font-size: 28rpx;
}

.no-goods-recommend {
  margin-top: 100rpx;
}

.no-goods-recommend .title {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 30rpx;
}

.no-goods-recommend .title image {
  width: 36rpx;
  height: 36rpx;
}

.no-goods-recommend .title text {
  font-size: 36rpx;
  color: #333;
  font-weight: 600;
}

.no-goods-recommend .title-content {
  width: 190rpx;
  margin: 0 14rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.no-goods-recommend .title .line {
  width: 28rpx;
  height: 2rpx;
  background-color: #ff9436;
  position: relative;
}

.no-goods-recommend  .line.left  .point {
  right: 0;
}

.no-goods-recommend  .line.right .point {
  left: 0;
}

.no-goods-recommend .title .point {
  width: 6rpx;
  height: 6rpx;
  border-radius: 50%;
  background-color: #ff9436;
  position: absolute;
  top: -1rpx;
}