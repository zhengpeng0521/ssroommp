.shade{
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0,0,0,0.5);
    z-index: 1;
}

.shade .qrcode{
    width: 600rpx;
    height: 490rpx;
    border-radius: 10rpx;
    margin: 0 auto;
    margin-top: 258rpx;
    background: #FFF;
    box-sizing: content-box;
    border-top: 12rpx solid #FF9436;
    position: relative;
}

.shade .qrcode .close{
    width: 50rpx;
    height: 50rpx;
    position: absolute;
    top: 20rpx;
    right: 20rpx;
}

.shade .qrcode .close:before{
    content: '';
    display: block;
    width: 30rpx;
    height: 4rpx;
    background: black;
    transform: rotate(45deg);
    position: absolute;
    top: 10rpx;
    right: 0;
}

.shade .qrcode .close:after{
    content: '';
    display: block;
    width: 30rpx;
    height: 4rpx;
    background: black;
    transform: rotate(-45deg);
    position: absolute;
    top: 10rpx;
    right: 0;
}

.shade .qrcode .qrcode-title{
    height: 40rpx;
    margin-top: 100rpx;
    text-align: center;
}

.shade .qrcode .qrcode-title text{
    font-size: 28rpx;
    line-height: 28rpx;
    color: #666;
}

.shade .qrcode .qrcode-title .qrcode-num{
    font-size: 40rpx;
    letter-spacing: -1px;
    font-weight: 500;
    line-height: 40rpx;
    color: #54AC41;
}

.shade .qrcode .qrcode-img{
    width: 400rpx;
    height: 400rpx;
    display: block;
    margin: 0 auto;
    margin-top: 40rpx;
}

