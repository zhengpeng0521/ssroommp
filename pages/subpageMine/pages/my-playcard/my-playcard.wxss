.container{
    margin-top: 30rpx;
}

.ticket-available{
    width: 100%;
    height: 230rpx;
    display: flex;
    background: #FFF;
    margin-bottom: 20rpx;
    position: relative;
}

.ticket-available .left{
    height: 100%;
    border-left: 8rpx solid #FF9834;
    border-right: 1px dashed #EBECF0; 
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
}

.ticket-available .left text{
    white-space:nowrap;
    font-size: 24rpx;
    font-weight: bold;
    color: #FF9834;
    margin-left: 20rpx;
    margin-right: 20rpx;
}

.ticket-available .left text:before{
    content: '';
    width: 30rpx;
    height: 30rpx;
    border-radius: 50%;
    background: #EBECF0;
    display: block;
    position: absolute;
    top: -14rpx;
    right: -15rpx;
}

.ticket-available .left text:after{
    content: '';
    width: 30rpx;
    height: 30rpx;
    border-radius: 50%;
    background: #EBECF0;
    display: block;
    position: absolute;
    bottom: -14rpx;
    right: -15rpx;
}

.ticket-available .right{
    margin: 30rpx;
    display: flex;
    flex-direction: row;
}

.ticket-available .right .ticket-info{
    display: flex;
    flex-direction: column;
}

.ticket-available .right .ticket-info .title{
    width: 480rpx;
    font-size: 28rpx;
    line-height: 28rpx;
    font-weight: bold;
    color: #333;
    margin-bottom: 38rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.ticket-available .right .ticket-info .text{
    font-size: 24rpx;
    line-height: 24rpx;
    color: #999;
    margin-bottom: 16rpx;
}

.ticket-available .right .ticket-info .text:last-child{
    margin-bottom: 0;
}


.ticket-available .right .ticket-info .text .text-inside{
    font-weight: 600;
    color: #666;
}

.ticket-available .right .right-img{
    width: 80rpx;
    height: 80rpx;
    position: absolute;
    right: 30rpx;
    bottom: 30rpx;
}




