.fixed-fields-title .name {
  color: #333 !important;
  font-size: 28rpx;
}

.fixed-fields-content {
  display: flex;
  align-items: center;
}

.fixed-fields-content image {
  width: 24rpx;
  height: 24rpx;
  margin-right: 10rpx;
}

.fixed-fields-content .iconfont {
  font-size: 24rpx;
  color: #333;
}

.input-list-content {
  height: 100%;
  position: relative;
  display: flex;
  flex:1;
  justify-content: space-between;
  align-items: center;
}
.input-list-content text {
  color: #333;
  line-height:40rpx;
  font-size: 28rpx;
}
.input-list-content .iconright {
  color: #aaa;
  font-size: 24rpx;
}
.input-list .text{
  font-size:28rpx;
}
