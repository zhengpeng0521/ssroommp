page{
  background: #fff;
}
.write-off-layout {
}

.write-off-layout image {
  width: 100%;
}

.list-container {
  margin-top: 30rpx;
  padding: 0 20rpx;
}

.list-container .date {
  color: #fff;
  background-color: #ccc;
  font-size: 28rpx;
  padding: 8rpx 45rpx 8rpx 21rpx;
  border-radius: 57rpx;
  position: relative;
  width: max-content;
}

