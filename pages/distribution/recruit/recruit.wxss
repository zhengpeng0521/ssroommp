/* pages/distribution/recruit/recruit.wxss */
page{
  background:#fff;
}
.action-box{
  position: absolute;
  width:100%;
  bottom:80rpx;
  left:0;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.recruit-img{
  width:100%;
  height:922rpx;
}
.verification{
  margin-top: 30rpx;
}
.verification .btn{
  font-size:36rpx;
}
.protocol{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.protocol-text{
  color:#F56C6C;
  font-size:28rpx;
  font-weight: 500;
  padding:20rpx 0 5rpx 0;
  letter-spacing: 1rpx;
}
.protocol-tips{
  font-size:28rpx;
  color:#FF9436;
}
.checkbox-label{
  font-size:24rpx;
  color:#666;
  line-height: 1;
  display: flex;
  align-items: center;
}
.checkbox{
  transform: scale(0.6) translate(0,1rpx);
}
.notice{
  text-align: center;
  color:#333;
  font-size:40rpx;
  font-weight: 500;
  padding:30rpx 0 0;
}