/* pages/recordedLesson/payment/payment.wxss */
.head {
  display: flex;
  flex-direction: row;
  background: #fff;
  margin-bottom: 20rpx;
  border-top:1rpx solid #eee;
  padding: 20rpx 34rpx 20rpx 30rpx;
}

.head .head-img {
  width: 160rpx;
  height: 160rpx;
  /* margin-left: 30rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx; */
  border-radius: 10rpx;
}

.head .head-content {
  margin: 0rpx 0 0rpx 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.head .head-content .content-title {
  width: 506rpx;
  font-size: 32rpx;
  line-height: 44rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.head .head-content .content-price {
  height: 40rpx;
  display: flex;
  flex-direction: row;
  line-height: 40rpx;

}

.head .head-content .content-price .current-price {
  font-size: 32rpx;
  font-weight: 500;
  color: #F56C6C;
  margin-right:10rpx;
}

.head .price-del{
  color:#999;
  font-size: 24rpx;
  text-decoration: line-through;
  padding-top: 4rpx;
  font-weight: 400;
}

.head .head-content .sell-num {
  font-size: 24rpx;
  line-height: 24rpx;
  color: #999;
}

.main {
  width: 100%;
  display: flex;
  flex-direction: column;
  background: #fff;
  margin-bottom: 20rpx;
}

.main .list {
  height: 90rpx;
  /* margin-left: 30rpx;
   */
  padding-right: 30rpx;
  margin-left: 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom: 1px solid #eee;
}
.main .list:last-of-type{
  border:none;
}
.middle-list {
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
}


.main .list .category {
  font-size: 28rpx;
  line-height: 32rpx;
  color: #666;
}
.main .list .iconfont{
  font-size:28rpx;
  line-height: 1;
}
.main .list .num-content {
  margin: auto 0 auto auto;
  display: flex;
  flex-direction: row;
  border: 1px solid #eee;
  border-radius: 8rpx;
}
.main .list .num-content text{
  color: #333;
  font-size: 28rpx;
}

.main .list .sum {
  font-size: 28rpx;
  line-height: 32rpx;
  color: #333;
  margin: auto 0 auto auto;
}
.main .list .sum text{
  font-size:28rpx;
}
.award-price{
  color:#F56C6C
}
.danger{
  color:#ff7058
}

