  display: flex;
  background-color: #fff;
  height: 92rpx;
  align-items: center;
  padding-right:30rpx;
  margin-left:30rpx;
  border-bottom: 1rpx solid #eee;
}

.section:last-child {
  border-bottom: none;
}

.section input {
  color: #333;
  font-size: 28rpx;
}

.section__title {
  color: #666;
  font-weight: 500;
  font-size: 28rpx;
  line-height: 45rpx;
  width: 184rpx;
}

.contact-info {
  color: #333;
  font-size: 32rpx;
  line-height: 28rpx;
  display: flex;
  justify-content: space-between;
}

.contact-info-title {
  font-weight: 500;
  color: #666;
  font-size: 28rpx;
}

.chose-contact {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.chose-contact  text {
  color: #aaa;
  font-size: 28rpx;
}

.vipcard-info {
  padding: 0 30rpx;
  margin-top: 30rpx;
  margin-bottom: 60rpx;
}

.vipcard-info  text {
  color: #999;
  font-size: 24rpx;
  padding:0;
  justify-content: flex-start;
  display: flex;
}

.name-input {
  color: #333;
  font-size: 28rpx;
  text-align: right;
  flex:1;
}
.placeholder-text{
  font-size:28rpx;
  color:#ccc;
}
.verification{
  position: absolute;
  bottom: 60rpx;
  width: 100%;
}
.verification.has-idcard{
  margin-top:158rpx;
}
