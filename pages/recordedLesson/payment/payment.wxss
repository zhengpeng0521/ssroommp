  background-color: #fff;
}

.vip-title {
  border-top: 1px solid #eee;
  padding-top: 40rpx;
}

.vip-title .section {
  border: none;
  height: fit-content;
  margin-bottom: 20rpx;
}

.confirm-text {
  color: #999;
  font-size: 28rpx;
  padding-left: 60rpx;
  margin-bottom: 30rpx;
}

