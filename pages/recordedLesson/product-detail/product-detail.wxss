  display: flex;
  align-items: center;
  justify-content: center;
  background:#F7F7F7;
  color:#666;
}
.tab-active{
  background:#fff;
  color:#333;
}
/**tabs选项卡修复**/
.tabs-container {
  margin-bottom: 116rpx;
}

.tabs-container .tips {
  padding-bottom: 25rpx;
}
.tabs-container .org-info {
  padding: 52rpx 30rpx 60rpx;
  background: #fff;
}
.tabs-container .lesson-intro {
  padding: 60rpx 30rpx;
  background: #fff;
}
.tabs-line{
  border-bottom: 1rpx solid #E6E6E6;
}
/* 机构信息 */
.org-info .view-shop {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 26rpx;
}
.view-shop .shop-name {
  display: flex;
  align-items: center;
}
.view-shop .shop-name image{
  width: 28rpx;
  height: 28rpx;
}
.view-shop .shop-name text {
  font-weight:600;
  color:rgba(51,51,51,1);
  line-height:32rpx;
  font-size: 28rpx;
  margin-left: 10rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  width: 510rpx;
}
.view-shop .shop-btn {
  width: 132rpx;
  /* height: 50rpx; */
  background:rgba(255,255,255,1);
  border-radius:28rpx;
  border:2rpx solid rgba(0,182,0,1);
  font-size: 24rpx;
  color: #00B600;
  line-height:34rpx;
  font-weight:500;
  text-align: center;
  padding: 10rpx 0;
}
.org-item {
  line-height: 34rpx;
  margin-bottom: 30rpx;
}
.org-item text {
  font-size: 24rpx;
  color: #666666;
}
.org-item:last-child {
  margin-bottom: 0;
}
/* 课程说明 */
.lesson-intro .intro-item {
  margin-bottom: 40rpx;
}
.lesson-intro .intro-item:last-child {
  margin-bottom: 0;
}
.intro-item .intro-item-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 24rpx;
}
.intro-item .intro-item-content {
  font-size: 24rpx;
  color: #666;
}
/* 课程章节 */
.classVideo {
  width: 100%;
  height: 422rpx;
  position: relative;
}
.classVideo .video_img {
  position: absolute;
  width: 100rpx;
  height: 100rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 9999;
}
.video_content {
  /* overflow: auto; */
  box-sizing: border-box;
  position: relative;
  padding-bottom: 60rpx;
}
.video_content .title {
  font-size: 24rpx;
  color: #666666;
  padding: 60rpx 30rpx 20rpx;
  width: 100%;
  background-color: #fff;
  z-index: 99;
}
.video_content .bottom {
  margin: 60rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}
/* 目录部分 */
.video_content .section  {
  color: #333;
  font-size: 28rpx;
}
.video_content .section .section_item {
  background-color: #F7F7F7;
  display: flex;
  padding: 36rpx 40rpx 36rpx 30rpx;
  position: relative;
}
.video_content .section .section_item .section_title {
  line-height: 28rpx;
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}
.video_content .section .border {
  border-bottom: 1px solid #EBEBEB;
}
.video_content .section .line {
  width: 10rpx;
  height: 40rpx;
  background: #00B600;
  margin-right: 40rpx;
}
.section .section_img {
  width: 24rpx;
  height: 14rpx;
  position: absolute;
  right: 40rpx;
  top: 50%;
  transform: translateY(-50%);  
}
.video_content .section .className {
  background-color: #fff;
}
.className .item_wrap {
  position: relative;
}
.className .class_name_item {
  padding: 0 40rpx 0 74rpx;
  display: flex;
  justify-content: space-between;  
  align-items: center;
  height: 100rpx;
}
.className .class_name_item .class_name_activity {
  color: #00B600 !important;
}
.className .class_name_item .class_name {
  display: flex;
  color: #666;
}
.className .class_name_item .index {
  font-size: 28rpx;
}
.className .class_name_item .class_name_line {
  margin: 0 20rpx;
}
.className .class_name_item .videoName {
  width: 476rpx;
  font-size: 28rpx;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.className .item_wrap .item_line {
  position: absolute;
  height: 1px;
  width: 680rpx;
  bottom: 0;
  right: 0;
  background-color: #F3F3F3;  
}
.className .class_name_item image {
  width: 30rpx;
  height: 30rpx;
}
.className .class_name_item .play_btn {
  width: 28rpx;
  height: 28rpx;
}
.section .noClass {
  color: #ccc;
  padding: 28rpx 0 38rpx 70rpx;
  background-color: #fff;
}


