page {
  background: #fff;
  padding-top: 594rpx;
}
.bar {
  background: #f7f7f7;
  height: 20rpx;
  width: 100%;
}
.fixTab {
  position: fixed;
  width: 100%;
  top: 0;
}
.fixTab {
  background-color: #fff;
  position: fixed;
  width: 100%;
  top: 0;
  left:0;
  z-index: 10;
}

.fixTab .head-item {
