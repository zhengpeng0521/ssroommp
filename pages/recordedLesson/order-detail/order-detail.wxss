.content .content-item:last-of-type {
  border-bottom: none;
  background: none;
}

.content .content-item .content-item-title {
  color: #666;
  font-size: 28rpx;
}
.content-item-desc {
  color: #333;
  font-size: 28rpx;
  line-height: 96rpx;
}
.content-item-danger {
  color: #f56c6c;
}
.btn-group {
  padding: 0 42rpx 42rpx;
  margin-top: 40rpx;
  display: flex;
  flex-direction: row;
}

.btn-group .cancel-btn {
  width: 320rpx;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  margin-right: 20rpx;
  color: #ff9436;
  border: 1px solid #ff9436;
}

.btn-group .continue-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  color: #fff;
  background: linear-gradient(
    322deg,
    rgba(255, 148, 54, 1) 0%,
    rgba(255, 188, 58, 1) 100%
  );
}

.content-target {
  width: 184rpx;
  height: 38rpx;
  background-color: #ffead7;
  border-radius: 4rpx;
  line-height: 38rpx;
  text-align: center;
  margin: 10rpx 0;
}

.content-target text {
  color: #ff9436;
  font-weight: 600;
  font-size: 24rpx;
}
.important-tip {
  font-size: 24rpx;
  color: #f56c6c;
}

.bottom-text-rules {
  padding: 20rpx;
  color: #999;
}
.bottom-text-rules .rules-text {
  display: block;
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #999;
}
.dialog--close {
  top: -80rpx;
}
.dialog-verifycode {
  position: absolute;
  z-index: 31;
  width: 520rpx;
  height: 508rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}
.verifycode-container {
  width: 520rpx;
  height: 508rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background-color: #fff;
  z-index: 31;
  text-align: center;
  overflow: hidden;
  border-radius: 20rpx;
}

.qrcode-container {
  /* background-color: #ededed; */
  position: relative;
  height: 380rpx;
  padding-top: 70rpx;
  box-sizing: border-box;
}

.qrcode-container canvas {
  position: absolute;
  left: 50%;
  top: 58%;
  transform: translate(-50%, -50%);
}

.refresh-container {
  position: absolute;
  left: 50%;
  top: 58%;
  transform: translate(-50%, -50%);
  z-index: 999;
  background: rgba(0, 0, 0, 0.6);
  width: 400rpx;
  height: 400rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.refresh-container image {
  width: 80rpx;
  height: 80rpx;
}
.qrcode-text {
  font-size: 28rpx;
  color: #666;
  margin-top: 40rpx;
}

/**弹出样式**/
.dialog-wrap {
  padding: 60rpx 40rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  flex-direction: column;
  min-width: 560rpx;
  box-sizing: border-box;
}
.qrcode {
  min-width: 520rpx;
}
.dialog-title {
  color: #333;
  font-size: 32rpx;
  line-height: 44rpx;
  font-weight: 500;
  margin-top: 30rpx;
}
.dialog-content {
  color: #666;
  font-size: 28rpx;
  line-height: 40rpx;
  width: 280rpx;
  text-align: center;
  margin-top: 20rpx;
}
.dialog-btn {
  margin-top: 40rpx;
}
.placeholder-text {
  font-size: 28rpx;
  color: #ccc;
}

