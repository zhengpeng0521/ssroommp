/* pages/recordedLesson/order-detail/order-detail.wxss */
@import "/components/enter-loading/enter-loading.wxss";

.header {
  width: 100%;
  min-height: 220rpx;
  display: flex;
  flex-direction: row;
  background: #fff;
  box-sizing: border-box;
  padding-top: 20rpx;
  padding-left: 30rpx;
  margin-bottom: 20rpx;
  position: relative;
  border-top: 1rpx solid #eee;
}

.header .header-img {
  width: 180rpx;
  height: 180rpx;
  border-radius: 8rpx;
  overflow: hidden;
}

.header .header-img image {
  width: 180rpx;
  height: 180rpx;
}

.header .center {
  margin-left: 20rpx;
  padding-bottom: 20rpx;
  display: flex;
  flex-direction: column;
}

.header .center .title {
  width: 410rpx;
  font-size: 30rpx;
  font-weight: 600;
  line-height: 38rpx;
  height: 78rpx;
  color: #333;
  overflow-y: scroll;
}
.content-block {
  display: flex;
  flex: 1;
  align-items: flex-end;
}
.current-price {
  color: #fa4816;
  font-weight: 500;
  font-size: 32rpx;
}
.header .center .price {
  margin-top: 20rpx;
  display: flex;
  align-items: baseline;
}

.header .center .price .left {
  font-size: 44rpx;
  font-weight: 600;
  line-height: 32rpx;
  color: #ff5100;
}

.header .center .price .left .dollor {
  color: #ff5100;
  font-size: 24rpx;
}

.header .center .price .right {
  font-size: 20rpx;
  line-height: 20rpx;
  padding: 5rpx 10rpx;
  color: #ff5100;
  border: 1px solid #ff5100;
  border-radius: 16rpx;
  margin-left: 10rpx;
  position: relative;
  top: -3rpx;
}

.header .center .price .right text {
  width: 100%;
  height: 1px;
  background: #999;
  position: absolute;
  top: 48%;
  left: 0;
}

.header .center .sale-num {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}

.total-price {
  color: #999;
  font-size: 24rpx;
}

.header .state {
  font-size: 24rpx;
  line-height: 24rpx;
  color: #ff9436;
  position: absolute;
  top: 20rpx;
  right: 30rpx;
}

.header .btn {
  width: 160rpx;
  height: 54rpx;
  background: #fff;
  border-radius: 48rpx;
  font-size: 24rpx;
  line-height: 54rpx;
  color: #666;
  border: 1px solid #ccc;
  text-align: center;
  position: absolute;
  bottom: 20rpx;
  right: 20rpx;
}

.content {
  width: 100%;
  background: #fff;
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
}

.content .content-item {
  position: relative;
  font-size: 24rpx;
  line-height: 92rpx;
  color: #666;
  margin-left: 30rpx;
  padding-right: 30rpx;
  border-bottom: 0.5px solid #eee;
  display: flex;
  justify-content: space-between;
  /* background-image: linear-gradient(#eee, #eee);
  background-repeat: no-repeat;
  background-size: 100% 2rpx;
  background-position: bottom; */
}
