.empty-box{
  padding-top:200rpx;
  display: flex;
  align-items: center;
  flex-direction: column;
}
.empty-image{
  width:244rpx;
  height:244rpx;
}
.empty-txt{
  font-weight: 500;
  margin-top:40rpx;
  color:#999;
  font-size:28rpx;
}