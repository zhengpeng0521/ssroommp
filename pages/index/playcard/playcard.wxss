  background-repeat: no-repeat;
  background-position-x: -10rpx;
  position: relative;
}

.play-card-price .background-image {
  width: 100%;
  height: 60rpx;
  background-size: contain;
  background-repeat: no-repeat;
  position: absolute;
  left: -40rpx;
  top: 0;
  z-index: -1;
}

.play-card-price text {
  color: #fff;
}

.f24 {
  font-size: 24rpx;
