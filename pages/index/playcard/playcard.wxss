  margin-bottom: 10rpx;
  color: #333;
}

.play-card-desc {
  color: #333;
  font-size: 28rpx;
  display: block;
}

.play-card-price {
  padding-right: 20rpx;
  text-align: center;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 10rpx;
