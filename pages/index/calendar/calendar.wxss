/* pages/index/calendar/calendar.wxss */
@import "/components/enter-loading/enter-loading.wxss";

page {
  background-color: #fff;
}
.appointTip{
  height:72rpx;
  line-height:72rpx;
  font-size: 24rpx;
  background:rgba(255,241,236,0.6);
  color:#b88766;
  padding-left:35rpx;
}
.week {
  top: 0;
  background-color: #fff;
  z-index: 10;
  width: 100%;
  position: fixed;
  padding-bottom: 10rpx;
}

.week-title {
  font-size: 36rpx;
  padding: 36rpx 20rpx;
  background-color: #fff;
}

.week-container {
  display: flex;
  justify-content: flex-start;
  border-bottom: 1rpx solid #eee;
  padding:8rpx 0;
}

.week-item {
  display: flex;
  justify-content: center;
  align-content: center;
}

.week-item.color {
  color: #00B600;
}

scroll-view {
  margin-top: 180rpx;
}

.calendar {
  padding: 20rpx 0rpx;
  color: #666;
}

.calendar:last-child {
  padding-bottom: 200rpx;
}

.calendar-item-title {
  text-align: center;
  color: #666;
}

.calendar-container {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  border-bottom: 1rpx solid #eee;
  justify-content: flex-start;
}

.calendar-item-content {
  display: flex;
  text-align: center;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  border-radius: 50%;
  position: relative;
}

.calendar-item-content .isFull {
  position: absolute;
  bottom: 8rpx;
  font-size: 20rpx;
  color: #ccc;
}

.calendar-item-content.disable {
  color: #d9d9d9;
}

.calendar-item-content.active .calendar-item-inner {
  color: #fff;
  background-color: #00B600;
}

.calendar-bottom {
  position: fixed;
  bottom: 0;
  width: 100%;
  background-color: #fff;
  padding: 0 0 60rpx 0;
}

.calendar-item-inner {
  width: 62rpx;
  height: 62rpx;
  font-size: 28rpx;
  border-radius: 50%;
}

.center {
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
}

.calendar-btn {
  width: 670rpx;
  height: 94rpx;
  background: linear-gradient(322deg, rgba(255, 148, 54, 1) 0%, rgba(255, 188, 58, 1) 100%);
  border-radius: 47rpx;
  color: #fff;
}
.coupon{
  padding:40rpx 30rpx;
}
@import "/template/coupon/coupon.wxss";

.modal{
  display: flex;
  width:560rpx;
  flex-direction: column;
}
.modal-top{
  position: relative;
  z-index: 2;
  width:560rpx;
  height:188rpx;
}
.modal-msg{
  display:block;
  padding:30rpx 40rpx;
  color:#333;
  text-align: center;
  font-size:32rpx;
  font-weight: 500;
  line-height: 48rpx;
}
.modal-bd{
  position: relative;
  z-index: 1;
  top:-30rpx;
  background:#fff;
  padding:60rpx 40rpx;
  border-radius: 0 0 20rpx 20rpx;  
}
.dialog-btn,.dialog-ft{
  padding-top:20rpx;
}
.dialog-btn .btn{
  width:100%;
}
.dialog-ft{
  display: flex;
  justify-content: space-between;
}
.dialog-ft .btn{
  width: 230rpx;
  margin:0;
  font-size:36rpx;
  font-weight: 500;
}
.dialog-ft .btn.btn-outline{
  width: 226rpx;
  height:90rpx;
  background:transparent;
  border: 2rpx solid #00B600;
  color: #00B600
}