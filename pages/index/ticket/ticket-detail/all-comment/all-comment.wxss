@import "/components/more-loading/more-loading.wxss";
@import "/components/stars/stars-template.wxss";

.header{
    width: 100%;
    height: 96rpx;
    background: #FFF;
    margin-bottom: 34rpx;
}

.header .desc{
    margin-left: 30rpx;
    font-size: 32rpx;
    font-weight: 500;
    line-height: 96rpx;
    color: #333;
}

.header .score{
    margin-left: 16rpx;
    font-size: 32rpx;
    font-weight: 500;
    line-height: 96rpx;
    color: #FF7058;
}


.comment{
    width: 100%;
    background: #FFF;
    display: flex;
    flex-direction: row;
    position: relative;
    box-sizing: border-box;
    padding: 30rpx;
    margin-bottom: 24rpx;
}

.comment .user-avatar{
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
}

.comment .center{
    display: flex;
    flex-direction: column;
    margin-left: 30rpx;
}

.comment .center .nickname{
    margin-top: 14rpx;
    margin-bottom: 12rpx;
    font-size: 28rpx;
    font-weight: 500;
    line-height: 28rpx;
    color: #54AC41;
}

.comment .center .content{
    margin-top: 26rpx;
    margin-bottom: -8rpx;
    font-size: 24rpx;
    font-weight: 500;
    line-height: 40rpx;
    color: #333;
}

.comment .center .img{
    margin-top: 20rpx;
}

.comment .center .img image{
    width: 172rpx;
    height: 172rpx;
    margin-right: 15rpx;
}

.comment .date{
    font-size: 24rpx;
    line-height: 24rpx;
    color: #999;
    position: absolute;
    top: 30rpx;
    right: 30rpx;
    
}









