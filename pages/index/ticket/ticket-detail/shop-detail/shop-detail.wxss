swiper {
  width: 100%;
  height: 280rpx;
}

swiper image {
  width: 100%;
  height: 280rpx;
}

.shop-info {
  width: 100%;
  background: #fff;
  box-sizing: border-box;
  padding-left: 30rpx;
  margin-bottom: 32rpx;
}

.shop-info .title {
  font-size: 32rpx;
  font-weight: bold;
  line-height: 90rpx;
  color: #333;
}

.shop-info .item {
  width: 100%;
  padding: 20rpx 0;
  border-top: 1px solid #eee;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

