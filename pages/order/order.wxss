.head {
  background-color: #fff;
  position: fixed;
  width: 100%;
  top: 0;
  left:0;
  z-index: 10;
}

.head .head-item {
  width: 164rpx;
  height: 100%;
  align-items: center;
  justify-content: center;
  position: relative;
  display: flex;
  cursor: pointer;
}

.head .head-item .item-content {
  font-size: 28rpx;
  color: #666;
  text-align: center;
  vertical-align: middle;
  position: relative;
}
.head .head-item .tab-active-class {
  color: #333;
  font-weight:600;
}
.head .head-item .head-green-line {
  width: 60rpx;
  height: 8rpx;
  background: #19B329;
  position: absolute;
  left: 50%;
  bottom: 0;
  margin-left: -30rpx;
  border-radius: 4rpx;
}

.head .head-item .item-content .head-badge {
  min-width: 32rpx;
  height: calc(width);
  border-radius: 50%;
  padding: 1px;
  background: #ff7058;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
  line-height: 32rpx;
  position: absolute;
  top: -16rpx;
  right: -16rpx;
}
.order-content {
  padding: 20rpx;
}
.general {
  width: 710rpx;
  min-height: 186rpx;
  margin: 0 auto 20rpx;
  border-radius: 10rpx;
  background: #fff;
}
.card-body{
  padding:20rpx;
  box-sizing: border-box;
  display: flex;
  position: relative;
}
.general .general-img {
  width: 140rpx;
  height: 140rpx;
  border-radius: 8rpx;
}

.general .general-content {
  /* margin: 0rpx auto auto 20rpx; */
  padding-left:20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.general .general-content .content-title {
  width: 365rpx;
  font-size: 28rpx;
  line-height: 34rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-bottom: 10rpx;
}

.content-type view{
  background:rgba(0,182,0,0.1);
  color:#00B600;
  font-size:24rpx;
  width: 144rpx;
  text-align: center;
  border-radius:4rpx;
  font-weight:500;
}

.general .general-content .content-target {
  width: 184rpx;
  height: 38rpx;
  background-color: #ffead7;
  border-radius: 4rpx;
  line-height: 38rpx;
  text-align: center;
  margin: 10rpx 0;
}

.general .general-content .content-target text {
  color: #ff9436;
  font-weight: 600;
  font-size: 24rpx;
}

.general .general-content .content-block-tip {
  font-size: 20rpx;
  color: #666;
  margin-right: 10rpx;
  /* margin-bottom: 16rpx; */
}

.general .general-content .content-block-middle {
  margin-right: 10rpx;
  /* margin-left: 10rpx; */
}

.content-block text {
  font-size: 20rpx;
}

.content-block-detail {
  font-size: 20rpx;
  color: #333;
}

.general .general-state {
  font-size: 24rpx;
  color: #ff7058;
  position: absolute;
  top: 20rpx;
  right: 20rpx;
}
.list-operate{
