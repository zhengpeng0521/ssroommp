  bottom: 16rpx;
  right: 20rpx;
  display: flex;
}
.list-operate .cancel-operate{
  border:2rpx solid #00B600;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 14rpx;
  margin-right: 14rpx;
  width:128rpx;
  height:48rpx;
  box-sizing: border-box;
  text-align: center;
}
.list-operate .cancel-operate text {
  color: #00B600;
  font-size: 24rpx;
  line-height: 24rpx;
}
.general .general-operate {
  border-radius: 24rpx;
  background: #00B600;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 14rpx;
  width:128rpx;
  height:48rpx;
  box-sizing: border-box;
  text-align: center;
}

.general .general-operate text {
  font-size: 24rpx;
  line-height: 24rpx;
  color: #fff;
}

.inline-flex{
  display: flex;
}
.content-block-item{
  margin-right:20rpx;
}
.content-block-item:last-child {
  margin-right: 0;
}
.card-footer{
  height:60rpx;
  line-height: 56rpx;
  text-align: center;
  font-size:24rpx;
}
.card-footer text{
  color:#999;
}
.rip{
  position: relative;
  height:10rpx;
  padding:0 10rpx;
}
.rip::before,.rip::after{
  position: absolute;
  content:'';
  border:10rpx solid transparent;
  top:50%;
  border-top-color:#f7f7f7;
  border-right-color:#f7f7f7;
  transform: translate(0,-50%) rotate(45deg);
}
.rip::before{
  left:-10rpx;
}
.rip::after{
  right:-10rpx;
  transform: translate(0,-50%) rotate(225deg);
}
.driver{
  border-top:2rpx dashed #eee;
  position: absolute;
  top:50%;
  width: 100%;
}

.empty-block {
  display: flex;
  flex-direction: column;
  position: absolute;
  left: 50%;
  top: 50%;
  -webkit-transform: translate(-50%, -50%);
  -moz-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
}

.empty-block .empty-img {
  width: 244rpx;
  height: 244rpx;
  margin: 0 auto 20rpx;
}

.empty-block .empty-text {
  font-size: 24rpx;
  color: #888;
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.empty-block .empty-text text {
  font-size: 24rpx;
  line-height: 24rpx;
  color: #888;
}

