/* pages/test-game/gift/gift.wxss */
page{
  background:#C92538;
}
.top{
  position: relative;
  background-size: 100%;
  background-repeat: no-repeat;
  width:100%;
  height:178rpx;
}
.avatar{
  position: absolute;
  width:120rpx;
  height:120rpx;
  left:50%;
  top:100rpx;
  margin-left:-60rpx;
  border:12rpx solid #FEDDB3;
  border-radius: 50%;
}
.form-wrap{
  padding:30rpx;
  margin-top:100rpx;
}
.form-item{
  display: flex;
  background:rgba(255,255,255,1);
  border-radius:10rpx;
  border:4rpx solid rgba(254,221,179,1);
  padding:25rpx;
  margin-top:30rpx;
  font-size:28rpx;
}
.form-input{
  flex:1;
  padding:0 10rpx;
}
.form-input .item-input{
  text-align: right;
}
.placeholder{
  text-align: right;
  color:#bbb;
  line-height: 46rpx;
  font-size:28rpx;
}
.form-label{
  color:#333;
  line-height: 46rpx;
}
.suffix,.item-input{
  line-height: 42rpx;
}
.info{
  text-align: center;
}
.pay{
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
  height:72rpx;
  font-size:50rpx;
  font-weight:500;
  color:rgba(255,222,179,1);
  line-height:72rpx;
}
.pay-number{
  padding: 0 20rpx;
  color:#FFE23C;
  font-size:50rpx;
}
.remark{
  margin:20rpx 0;
  height:24rpx;
  font-size:24rpx;
  font-weight:500;
  color:rgba(254,221,179,1);
  line-height:24rpx;
}
.btn-img{
  margin:20rpx auto;
  width:580rpx;
  height:120rpx;
}
.button{
  background:none;
  line-height: normal;
}