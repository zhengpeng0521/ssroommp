/* pages/test-game/detail/detail.wxss */
page{
  background:#C92538;
}
.top{
  display: flex;
  justify-content: space-between;
  margin:40rpx 0;
}
.g-btn{
  width:170rpx;
  height:60rpx;
  line-height: 60rpx;
  font-size:28rpx;
  text-align: center;
  background:rgba(231,49,59,.6);
  font-weight:500;
  color:rgba(254,237,202,1);
  background-clip:text;
}
.lf{
  border-radius:0px 30rpx 30rpx 0px;
}
.rt{
  border-radius:200rpx 0px 0px 200rpx;
}

.content{
  box-sizing: border-box;
  position: relative;
  background-size: 100%;
  background-repeat: no-repeat;
  width:670rpx;
  height:964rpx;
  margin:0 auto;
  padding:0 30rpx;
}
.title{
  position: absolute;
  width: 100%;
  text-align: center;
  top:-46rpx;
  left:0;
}
.list{
  display: flex;
  flex-wrap: wrap;
  padding-top:80rpx;
}
.list-item{
  width:50%;
  font-size:27rpx;
  line-height: 40rpx;
  margin-bottom:10rpx;
  color:#333;
  font-weight: 500;
}
.action{
  display: flex;
  justify-content: space-between;
  margin-top:30rpx;
}
.action-btn{
  box-sizing: border-box;
  width:290rpx;
  height:90rpx;
  line-height: 90rpx;
  border-radius:62rpx;
  font-size:40rpx;
  color:#fff;
  margin:0;
}
.btn-view{
  background:rgba(235,76,85,1);
}
.btn-poster{
  background:rgba(71,186,187,1);
}

.scroll{
  border-top:1rpx dashed #eee;
  height:512rpx;
  margin-top:40rpx;
  padding-top:20rpx;
}
.record{
  display: flex;
  border-bottom: 1rpx solid #eee;
  padding:25rpx 0;
}
.media{
  width:80rpx;
  height:80rpx;
  margin-right: 10rpx;
  border-radius: 50%;
}
.item{
  display: flex;
  flex: 1;
  flex-direction: column;
  justify-content: center;
}
.item-row{
  font-size:24rpx;
  color:#666;
  display: flex;
  justify-content: space-between;
}
.money{
  font-size:32rpx;
  font-weight: bold;
  color:#FA4816;
}
.nickname{
  font-size:28rpx;
  color:#333;
}
.media-action{
  display: flex;
  align-items: center;
  margin-left: 20rpx;
}
.media-btn{
  width:150rpx;
  height:60rpx;
  line-height: 60rpx;
  text-align: center;
  background:rgba(255,138,92,1);
  border-radius:62rpx;
  color:#fff;
  font-size:28rpx;
}
.cell{
  border-bottom: 1rpx solid #eee;
  font-size:24rpx;
  padding:10rpx 0;
}
.question{
  color:#FA4816;
  padding-bottom:10rpx;
}
.answer{
  display: flex;
  align-items: center;
}
.badge{
  width:40rpx;
  height:40rpx;
  border-radius: 50%;
  background:#19be6b;
  color:#fff;
  font-size:42rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right:10rpx;
}
.error{
  align-items: flex-start;
  line-height: 36rpx;
  background:#ed4014;
}