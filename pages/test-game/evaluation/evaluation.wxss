page{
  background:#C5212F;
}
.index{
  padding:40rpx;
  height:88rpx;
  background-size:100%;
  background-repeat: no-repeat;
}
.list{
  display: flex;
  justify-content: space-around;
}
.list-item{
  width:50rpx;
  height:50rpx;
  line-height: 50rpx;
  text-align: center;
  background:rgba(235,76,85,1);
  border:4rpx solid rgba(254,221,179,1);
  border-radius: 50%;
  color:#B20F1C;
  font-weight: bold;
}
.active{
  background-color: #FEDDB3;
}
.question{
  display: flex;
  justify-content: center;
  align-items: center;
  margin:0 auto 40rpx;
  width:638rpx;
  height:398rpx;
  background-repeat: no-repeat;
  background-size: 100%;
}
.question-content{
  padding:40rpx;
  font-size:34rpx;
  font-weight:600;
  color:rgba(255,232,203,1);
  line-height:72rpx;
  text-align: center;
}
.action{
  padding:90rpx 0;
  text-align: center;
}
