/* components/swiper-special/swiper-special.wxss */

.list-container {
  margin-top: 20rpx;
  padding: 0 30rpx;
}

.list-title {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
  align-items: center;
}

.list-title .title-text {
  font-size: 36rpx;
  font-weight: 700;
  letter-spacing: 2rpx;
  color: #333;
}

.swiper-container {
}

.swiper-component {
  height: 592rpx;
}

.swiper-item {
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: visible;
  height:auto!important;
}

.swiper-item-nav {
  width: 400rpx;
  overflow: hidden;
  transform: scale(0.9);
  transition: all 0.9s;
  border-radius: 24rpx;
  box-shadow: 0px 5px 15px 0px rgba(128, 132, 153, 0.2);
}

.swiper-item-nav.active {
  transform: scale(1);
  box-shadow: 0px 14px 25px 0px rgba(128, 132, 153, 0.2);
}

.swiper-item-top {
  width: 100%;
  height: 400rpx;
  background-size: 100% 100%;
  background-repeat: no-repeat;
  position: relative;
}
.swiper-item-mask{
  position: absolute;
  bottom: 0;
  height:100rpx;
  background:linear-gradient(180deg,rgba(0,0,0,0) 0%,rgba(0,0,0,0.55) 100%);
  width: 100%;
}
.swiper-item-title {
  font-size: 26rpx;
  color: #fff;
  padding-left: 30rpx;
  position: absolute;
  bottom: 16rpx;
  line-height: 44rpx;
}

.swiper-item-bottom {
  background-color: #fff;
  padding: 30rpx;
}

.swiper-item-bottom .txt {
  font-size: 28rpx;
  /* line-height: 34rpx; */
  height:80rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  color: #333;
}
