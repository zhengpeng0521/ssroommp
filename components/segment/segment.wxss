/* components/segment/segment.wxss */
/** 分段器 **/
.goods-tab {
  display: flex;
  align-items: center;
  justify-content: space-around;
  border-bottom: 2rpx solid #ddd;
}

.tab-item-tap {
  flex: 1;
  display: flex;
  justify-content: center;
  overflow: hidden;
  text-overflow: ellipsis;
}

.tab-item {
  /* background-color: pink; */
  text-align: center;
  height: 90rpx;
  line-height: 90rpx;
  position: relative;
  width: max-content;
  /* transition: all .3s; */
}

.tab-item .tab-item-text {
  color: #666;
  font-size: 28rpx;
}

.tab-item.active .bottom-border {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 8rpx;
  border-radius: 4rpx;
  background-color: #ff9436;
}

.tab-item.active .tab-item-text {
  color: #ff9436;
}
.goodsNavFixed {
  position: fixed;
  top: 80rpx;
  left: 0;
  z-index: 10;
  width: 100%;
  box-sizing: border-box;
  padding: 0 30rpx;
  background-color: #fff;
  box-shadow:0 4rpx 8rpx 0 rgba(0,0,0,0.1);
}
.tag{
  height: 90rpx;
  line-height: 90rpx;
  justify-content: flex-start;
  border-bottom:none;
}
.tag .tab-item.active{
  background:rgba(255,148,54,.2);
}
.tag .tab-item-tap{
  /* flex:0 1 auto; */
  flex: 0 0 22%;
  margin-right: 40rpx;
  /* padding:0 6rpx; */
}
.tag .tab-item-tap:last-child{
  /* flex:0 1 auto; */
  margin-right: 0;
  /* padding:0 6rpx; */
}

.tag .bottom-border{
  display: none;
}
.tag .tab-item{
  display: flex;
  justify-content: center;
  box-sizing: border-box;
  height:60rpx;
  background:#f7f7f7;

  min-width: 0;
  width:100%;
  text-align: center;
  border-radius: 30rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.tag .tab-item .tab-item-text{
  box-sizing: border-box;
  padding:18rpx 0 16rpx;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  line-height: 1;
  font-size: 28rpx;
}
.tag .tab-item .tab-item-text.android{
  padding:0;
}
.tag .tab-item.active .tab-item-text{
  color: #FF9436;
  font-weight: 600;
}
.scroll{
  display: flex;
}