  padding: 10rpx 24rpx;
  background: linear-gradient(90deg,rgba(255,229,27,1) 0%,rgba(255,193,56,1) 100%);
  border-radius: 0px 0px 20rpx 0px;
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  top: 0;
  left: 0;

}
.carousel-title text{
  color: #333;
  font-weight: bold;
}
.carousel-container .num-container {
  position: absolute;
  bottom: 30rpx;
  right: 20rpx;
  z-index: 3;
  width: 78rpx;
  height: 42rpx;
  background-color: rgba(0, 0, 0, 0.4);
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.carousel-container .num-container text {
  font-size: 24rpx;
  color: #fff;
}

.carousel {
  width: 100%;
  height: 422rpx;
}

.carousel-item {
}

.carousel image {
  width: 100%;
  height: 100%;
}
