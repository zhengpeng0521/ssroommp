/* components/coupon/coupon.wxss */
.coupon-item{
  position: relative;
  z-index: 1;
  border-radius: 20rpx;
  overflow: hidden;
  color:#fff;
  height:220rpx;
  padding:40rpx 30rpx 30rpx 40rpx;
  box-sizing: border-box;
  margin-bottom:30rpx;
}
.coupon-hd{
  display: flex;
}
.coupon-info{
  flex:1;
  line-height: 50rpx;
  font-weight: 500;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
}
.coupon-info-name{
  font-size:36rpx;
  margin-bottom: 10rpx;
}
.coupon-info-desc{
  font-size:28rpx;
  height:50rpx;
}
.coupon-btn{
  height:52rpx;
  padding:0 24rpx;
  line-height: 52rpx;
  text-align: center;
  font-size:28rpx;
  /* background:linear-gradient(90deg,rgba(69,158,255,1) 0%,rgba(176,111,255,1) 100%); */
  border-radius:28rpx;
  border:2rpx solid #fff;
  color:#fff;
  font-size:600;
}

.coupon-bd{
  text-align: right;
  font-size: 28rpx;
  font-weight: 600;
}
.coupon-bg{
  z-index: -1;
  position: absolute;
  left: 0;
  top: 0;
  width:100%;
  height:220rpx;
}
