<template name="starsTemplate">
  <view class="stars-container">
    <view class="stars">
      <block wx:for="{{stars}}" wx:for-item="i">
        <image wx:if="{{i}}" src="/images/icon/Star-yellow.png"></image>
        <image wx:else src="/images/icon/Star-gray.png"></image>
      </block>
    </view>
    <text class="star-score">{{score}}</text>
  </view>
</template>