/* components/calendar/calendar.wxss */
.week {
  top: 0;
  background-color: #fff;
  z-index: 10;
  width: 100%;
  position: fixed;
  padding-bottom: 10rpx;
}

.week-title {
  font-size: 36rpx;
  padding: 36rpx 20rpx;
  background-color: #fff;
}

.week-container {
  display: flex;
  justify-content: flex-start;
  border-bottom: 1rpx solid #eee;
  padding:8rpx 0;
}

.week-item {
  display: flex;
  justify-content: center;
  align-content: center;
}

.week-item.color {
  color: #00B600;
}

scroll-view {
  margin-top: 180rpx;
}

.calendar {
  padding: 20rpx 0rpx;
  color: #666;
}

.calendar:last-child {
  padding-bottom: 200rpx;
}

.calendar-item-title {
  text-align: center;
  color: #666;
}

.calendar-container {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  border-bottom: 1rpx solid #eee;
  justify-content: flex-start;
}

.calendar-item-content {
  display: flex;
  text-align: center;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  border-radius: 50%;
  position: relative;
}

.calendar-item-content .isFull,.less {
  position: absolute;
  bottom: 8rpx;
  font-size: 20rpx;
  color: #ccc;
}
.less{
  color:#00B600;
  font-weight: 500;
}

.calendar-item-content.disable {
  color: #d9d9d9;
}

.calendar-item-content.active .calendar-item-inner {
  color: #fff;
  background-color: #00B600;
}

.calendar-bottom {
  position: fixed;
  bottom: 0;
  width: 100%;
  background-color: #fff;
  padding: 0 0 60rpx 0;
}

.calendar-item-inner {
  width: 60rpx;
  height: 60rpx;
  font-size: 28rpx;
  border-radius: 50%;
}

.center {
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
}

.calendar-btn {
  width: 670rpx;
  height: 94rpx;
  background: linear-gradient(322deg, rgba(255, 148, 54, 1) 0%, rgba(255, 188, 58, 1) 100%);
  border-radius: 47rpx;
  color: #fff;
}