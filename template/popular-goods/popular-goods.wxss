.products-list-container {
  padding-bottom: 130rpx;
}

.products-list {
  /* padding: 0 15rpx; */
}

.products-item {
  width: 100%;
  margin-top: 20rpx;
  box-shadow: 0px 4px 20px 0px rgba(0, 0, 0, 0.1);
  position: relative;
  border-radius: 10rpx;
  overflow: hidden;
}

.products-item-img {
  width: 100%;
  /* height: 400rpx; */
  /* border-radius: 20rpx 20rpx 0 0; */
  margin-bottom: 30rpx;
}

.products-item-detail {
  padding: 0rpx 20rpx 20rpx;
}

.products-item-title {
  font-size: 28rpx;
  font-weight: 600;
  display: flex;
  justify-content: space-between;
}

.products-item-title .title {
  width: 300rpx;
  font-size: 28rpx;
  color: #333;
}
.products-item-title .title.long{
  width: 100%;
}
.products-item-title .count-down {
  color: #999;
  display: inline-block;
  font-size: 20rpx;
  font-weight: 400;
}
.products-item-title  .count-down .leftTime {
  color: #fff;
  padding: 3rpx 5rpx;
  background-color: #555;
  font-size: 20rpx;
  border-radius: 2rpx;
}
.products-item-title  .count-down .tian{
  margin: 0 3rpx;
  font-size: 20rpx;
}


.products-item-desc {
  font-size: 24rpx;
  color: #666;
  margin-top: 12rpx;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #e9e9e9;
}

.products-item-price {
  color: #ff5100;
  font-weight: 500;
  font-size: 44rpx;
  margin-top: 20rpx;
}

.member-price {
  display: inline-block;
  height: 30rpx;
  padding: 6rpx 16rpx;
  background: rgba(255, 148, 54, 0.1);
  border-radius: 18rpx;
  border: 2rpx solid rgba(255, 148, 54, 0.2);
  font-size: 22rpx;
  color: #ff5100;
  position: relative;
  top: -6rpx;
}

.products-item-count {
  font-size: 24rpx;
  color: #999;
}
.products-item-share{
  font-size: 22rpx;
  color: #A3A3A3;
  margin-top: 7rpx;
}

.products-item-share-count{
  color: #FF5100;
}
.count-range-box {
  margin-left: 10rpx;
  display: inline-block;
  width: 130rpx;
  height: 12rpx;
  background: rgba(255, 148, 54, 0.2);
  border-radius: 7rpx;
  border: 1px solid rgba(255, 148, 54, 1);
  position: relative;
}

.count-range-line {
  position: absolute;
  height: 12rpx;
  width: 60rpx;
  top: 0;
  left: 0;
  border-radius: 7rpx;
  background-color: #ff9436;
}

.products-item-buy {
  color: #fff;
  font-size: 28rpx;
  padding: 10rpx 40rpx;
  background: linear-gradient(232deg, rgba(255, 148, 54, 1) 0%, rgba(255, 174, 58, 1) 100%);
  border-radius: 28rpx;
  position: absolute;
  bottom: 50rpx;
  right: 20rpx;
}
.products-item-buy.noVip{
  bottom: 25rpx;
}
.nomore-data {
  color: #999;
  font-size: 24rpx;
  text-align: center;
  margin-top: 30rpx;
}
