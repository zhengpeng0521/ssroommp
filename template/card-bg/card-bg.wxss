/* template/card-bg/card-bg.wxss */

.card-bg-layout {
  background-color: #ff9834;
  width: 100%;
  height: 280rpx;
  position: relative;
  border-bottom-right-radius: 410rpx 30rpx;
  border-bottom-left-radius: 410rpx 30rpx;
  overflow: hidden;
}

.bg-box {
  border-radius: 50%;
  position: absolute;
  z-index: 11;
}

.bg-box1 {
  width: 312rpx;
  height: 252rpx;
  background: linear-gradient(195deg, rgba(255, 181, 59, 1) 0%, rgba(255, 122, 82, 1) 100%);
  top: 50rpx;
  left: -80rpx;
}

.bg-box2 {
  width: 60rpx;
  height: 60rpx;
  background: linear-gradient(195deg, rgba(255, 181, 59, 1) 0%, rgba(255, 181, 59, 0) 100%);
  top: 10rpx;
  right: 200rpx;
}

.bg-box3 {
  width: 140rpx;
  height: 140rpx;
  background: linear-gradient(195deg, rgba(255, 181, 59, 1) 0%, rgba(255, 122, 82, 0) 100%);
  top: 50rpx;
  right: 30rpx;
}
