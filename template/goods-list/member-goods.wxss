.member-goods-item .item-btn {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 136rpx;
  height: 54rpx;
  background: #FEDB4C;
  border-radius: 28rpx;
  color: #333;
  font-size: 24rpx;
  font-weight: 500;
  line-height: 34rpx;
}
.item-frag{
  font-size: 24rpx;
  color:#ff9436;
}
