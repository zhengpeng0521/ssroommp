.item-sale-wrap{
  width: 100%;
  height:80rpx;
  background:linear-gradient(180deg,rgba(0,0,0,0) 0%,rgba(0,0,0,0.55) 100%);
  position: absolute;
  bottom:0;
  left:0;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}
.item-sale-wrap .item-sale{
  display: flex;
  padding-right:20rpx;
  align-items: center;
}
.pre-sale{
  font-size:28rpx;
  color: #fff;
  flex:1;
  text-align: right;
  line-height: 36rpx;
  padding-right:6rpx;
}
.countdown{
  font-size:24rpx;
  color: #fff;
  display: flex;
  flex:1;
  align-items: center;
}
.countdown .clock{
  background:#F56C6C;
  color:#fff;
  font-size:20rpx;
  font-weight:500;
  width: 36rpx;
  line-height: 36rpx;
  box-sizing: border-box;
  text-align: center;
  border-radius: 4rpx;
  margin:0 5rpx;
}
.clock-split{
  color:#fff;
  margin: 0 2px;
  height:36rpx;
  line-height:30rpx;
}
.clock-day{
  font-size:28rpx;
  margin: 0 2px;
  color:#fff;
  line-height: 36rpx;
}
.item-btn-group{
  background:linear-gradient(232deg,rgba(255,148,54,1) 0%,rgba(255,174,58,1) 100%);
  border-radius: 10rpx;
  color:#fff;
  display: flex;
  flex-direction: column;
  width:168rpx;
  height:72rpx;
  align-items: center;
  margin-top:28rpx;
}
.item-btn-group .item-btn-text{
  font-weight: 500;
  font-size: 28rpx;
  height:38rpx;
  line-height: 38rpx;
}
.item-btn-group .item-btn-decorate{
  font-size: 22rpx;
  height:34rpx;
  line-height: 38rpx;
}
.icon-location{
  color:#FF9436;
}