.shade-loading{
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: #EBECF0;
    z-index: 1;
}

.enterLoading{
    position: absolute;
    top: 50%;
    left: 50%;
    margin-left: -70rpx;
    margin-top: -60rpx;
    display: flex;
    flex-direction: column;
}

.enterLoading image{
    width: 150rpx;
    height: 120rpx;
    margin-bottom: 20rpx;
    /*transform: rotateY(180deg);*/
    /*animation: imageMarginLeft 1.6s steps(6) infinite;*/
}

.enterLoading .loading-text{
    display: flex;
}

.enterLoading .loading-text .text{
    font-size: 28rpx;
    font-weight: 600;
    line-height: 28rpx;
    color: #666;
}

.enterLoading .loading-text .dot{
    width: 54rpx;
    font-size: 28rpx;
    font-weight: 600;
    line-height: 28rpx;
    color: #227253;
    overflow: hidden;
    animation: stretchdelay 1.6s steps(6) infinite;
}

@-webkit-keyframes stretchdelay{
    0%{
        width: 0;
    }
    100%{
        width: 54rpx;
    }
}

